{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "System": "Information",
      "Microsoft": "Information"
    },
    "Console": {
      "FormatterName": "json",
      "FormatterOptions": {
        "IncludeScopes": true,
        "JsonWriterOptions": {
          "Indented": true
        }
      },
      "LogLevel": {
        "Default": "Debug"
      }
    }
  },
  "DataProviderSettings": {
    "HttpClientName": "SteamDataProvider",
    "AvailableGamesUrl": {
      "BaseUrl": "http://api.steampowered.com/ISteamApps/GetAppList/v2"
    },
    "GameNewsUrl": {
      "BaseUrl": "https://api.steampowered.com/ISteamNews/GetNewsForApp/v0002",
      "QueryParameters": [
        {
          "Mapping": "gameId",
          "Name": "appid"
        },
        {
          "Name": "count",
          "Value": "1"
        },
        {
          "Name": "format",
          "Value": "json"
        }
      ]
    },
    "HandlerLifetimeInSeconds": "60",
    "TimeoutInSeconds": "60"
  }
}
